<div class="page-wrapper">
  <div class="page-container">
  <h1 class="text-center">Détails de l'activité</h1>

<div class="container">
  <div class="row text-center">
      <div class="card">
       <div class="col-xs-4 col-sm-4 ">
          <% if @activity.user.photo? %>
              <%= cl_image_tag activity.user.photo.path, class: "user_picture_activity", crop: :fill %>          <% else %>
            <%= image_tag "placeholder-user-photo.png", class: "user_picture_activity"%>
          <% end %>
                <%= simple_form_for (@booking) do |f| %>
                  <%= f.hidden_field :user_id, as: :integer, value: @activity.user.id %>
                  <%= f.hidden_field :accepted, as: :boolean, value: false %>
                  <%= f.hidden_field :activity_id, as: :integer, value: @activity.id %>

                  <%= f.button :submit, value: "Réserver", class: "btn btn-home", id: "activity_button" %>
                <% end %>
          </div>

        <div class="col-xs-8  col-sm-8">
          <div>
             <% if @activity.name === "Cuisine" %>
              <h3 class="text-center"><i class="fa fa-cutlery"></i> <%= @activity.name %> avec <%= @activity.user.name %> <%= @activity.user.surname %></h3>
            <% elsif @activity.name === "Informatique" %>
              <h3 class="text-center"><i class="fa fa-laptop"></i> <%= @activity.name %> avec <%= @activity.user.name %> <%= @activity.user.surname %></h3>
            <% elsif @activity.name === "Conversation" %>
              <h3 class="text-center"><i class="fa fa-commenting-o"></i> <%= @activity.name %> avec <%= @activity.user.name %> <%= @activity.user.surname %></h3>
            <% else %>
              <h3 class="text-center"><i class="fa fa-book"></i> <%= @activity.name %> avec <%= @activity.user.name %> <%= @activity.user.surname %></h3>
            <% end %>
            <p><strong>Demande : </strong><%= @activity.description %></p>
            <p><strong>Date :</strong> Du <%= @activity.starting_time %> au <%= @activity.end_time %></p>
            <p><strong>Rémunération :</strong> <%= @activity.price %>€</p>
              <% if @activity.user.description %>
              <p><strong>A propos de moi :</strong> <%= @activity.user.description %></p>
            <% end %>
  </div>

  </div>
  </div>
  </div>
  <div class="text-center">
<%= link_to 'Back to activities', activities_path({search: @search}), class: "btn btn-danger", id:"btn-center" %>
</div>
  </div>
  </div>
  </div>

