<p id="notice"><%= notice %></p>

<div class="page-wrapper">
  <div class="page-container">
    <h3>Résultats...</h3>
    <div class="container">
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <div>
            <ul>
              <% @activities.each do |activity| %>
                <li>
                  <div class="search-card">
                    <div id="flexouille">
                      <div id="text-box">
                        <h4> <%= activity.name %> avec <%= activity.user.name %> <%= activity.user.surname %> </h4>
                        <p> <%= activity.description %></p>
                        <p>Adresse: <%= activity.user.address %> / Compensation: <%= activity.price %>€</p>
                      </div>
                      <%= image_tag "papy_marcel.jpeg", {class: "avatar-square-big"} %>
                    </div>
                    <div id="link-box">
                      <p><%= link_to 'Show', activity, class: "btn btn-primary" %></p>
                      <%= simple_form_for (@booking) do |f| %>
                        <%= f.hidden_field :user_id, as: :integer, value: activity.user.id %>
                        <%= f.hidden_field :accepted, as: :boolean, value: false %>
                        <%= f.hidden_field :activity_id, as: :integer, value: activity.id %>
                        <%= f.button :submit, value: "Book", class: "btn btn-danger" %>
                      <% end %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
