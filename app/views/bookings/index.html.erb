<div class="page-wrapper">
  <div class="page-container">
  <h1 class="text-center">Mes rendez-vous</h1>
    <div class="container">
      <% @my_bookings.each do |my_booking| %>
        <div class="row">
          <div class="col-xs-8 col-xs-offset-2 ">
            <div class="booking">
              <% if my_booking.user.photo? %>
                <%= cl_image_tag my_booking.user.photo.path, width: 200, height: 300, crop: :fill %>
              <% end %>
              <div class='booking-body'>
                <div>
                  <h3><%= my_booking.activity.name %></h3>
                  <p>Du <%= my_booking.activity.starting_time %> au <%= my_booking.activity.end_time %> </p>
                  <p><strong>Vous serez aidÃ© par:</strong> <%= my_booking.user.name %></p>
                </div>
                <div>
                  <h4>
                  <%= my_booking.accepted %>
                  </h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <% @bookings.each do |booking| %>
        <div class="row">
          <div class="col-xs-8 col-xs-offset-2 ">
            <div class="booking">
              <% if booking.activity.user.photo? %>
                <%= cl_image_tag booking.activity.user.photo.path, width: 200, height: 300, crop: :fill %>
              <% end %>
              <div class='booking-body'>
                <h3><%= booking.activity.name %></h3>
                <p>Du <%= booking.activity.starting_time %> au <%= booking.activity.end_time %> </p>
                <p><strong>Vous irez aider:</strong> <%= booking.activity.user.name %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <%= link_to 'Back to my profile', user_path(current_user) %>
    </div>
  </div>
</div>
