<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<div class="page-wrapper">
  <div class="page-container">
    <div class="container">
      <div class="row">
        <div class="col-xs-4">
          <div>
            <%= image_tag "profile.placeholder.jpeg", {class: "avatar-square-huge"} %>
          </div>
        </div>
        <div class="col-xs-8">
          <div>
            <% @bookings.each do |booking| %>
              <ul>
                 <li><p><%= booking.activity.name %> du <%= booking.activity.starting_time %> au <%= booking.activity.end_time %> avec <%= booking.user.name %></p></li>


              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <%= link_to 'See all activities', activities_path %>
  </div>
</div>
