<%= simple_form_for :search, url: activities_path, method: 'get' do |f| %>
  <%= f.input :name, collection: ["Cuisine", "Informatique", "Conversation", "Echec"] %>
  <%= f.input :starting_time, as: :string, input_html: { class: 'datepicker'} %>
  <%= f.input :end_time, as: :string, input_html: { class: 'datepicker'} %>
  <%= f.input :address %>
  <%= f.submit "Trouver", class: "btn btn-primary" %>
<% end %>
